{
  "name": "alt-text-checker",
  "displayName": "Alt Text Checker",
  "description": "VS Code plugin para prevenir Missing Alt Text usando IA",
  "version": "0.0.1",
  "engines": { "vscode": "^1.90.0" },
  "activationEvents": [
    "onLanguage:html",
    "onLanguage:javascriptreact",
    "onLanguage:typescriptreact"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      { "id": "html", "extensions": [".html"] },
      { "id": "javascriptreact", "extensions": [".jsx"] },
      { "id": "typescriptreact", "extensions": [".tsx"] }
    ],
    "commands": [
      {
        "command": "altTextChecker.generateAlt",
        "title": "Gerar texto alternativo via IA"
      }
    ],
    "codeActions": [
      {
        "language": "html",
        "kind": "quickfix.alttext"
      }
    ]
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.90.0",
    "typescript": "^5.3.0"
  }
}
